<?xml version="1.0"?>

<!-- create the robot -->
<robot name="my_robot">

    <!-- defining colours for robot -->
    <material name="blue">
        <color rgba="0 0 0.5 1"/>
    </material>

    <material name="grey">
        <color rgba="0.5 0.5 0.5 1"/>
    </material>

    <material name="red">
        <color rgba="0.5 0 0 1"/>
    </material>

    <!-- base footprint to lift the entire model above the ground -->
    <link name="base_footprint">
    </link>

    <!-- link section -->

    <!-- base link which all the others inherit from -->
    <link name="base_link">
        <visual>
            <geometry>
                <!-- length, width, height in meters -->
                <box size="0.6 0.4 0.2"/>
            </geometry>
            <!-- roll, pitch, yaw ie rotation on the x, y and z axis respective -->
            <origin xyz="0 0 0.1" rpy="0 0 0"/>

            <!-- use the mertial tag declared above -->
            <material name="blue" />
        </visual>
    </link>

    <!-- right wheel link -->
    <link name="right_wheel_link">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0 0" />
            <material name="grey" />
        </visual>
    </link>

    <!-- left wheel link -->
    <link name="left_wheel_link">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0 0" />
            <material name="grey" />
        </visual>
    </link>

    <!-- front wheel link -->
    <link name="caster_wheel_link">
        <visual>
            <geometry>
                <sphere radius="0.05" />
            </geometry>
            <origin xyz="0 0 -0.025" rpy="0 0 0" />
            <material name="grey" />
        </visual>
    </link>
        
    <!-- joint section -->

    <!-- base joint which lifts the model above the ground -->
    <joint name="base_joint" type="fixed">
        <parent link="base_footprint"/>
        <child link="base_link" />
        <origin xyz="0 0 0.1" rpy="0 0 0" />
        <axis xyz="0 1 0" />
    </joint>

    <!-- joint for right wheel -->
    <joint name="base_right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel_link" />
        <origin xyz="-0.15 -0.225 0" rpy="0 0 0" />
        <axis xyz="0 1 0" />
    </joint>

    <!-- joint for left wheel -->
    <joint name="base_left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel_link" />
        <origin xyz="-0.15 0.225 0" rpy="0 0 0" />
        <axis xyz="0 1 0" />
    </joint>

    <!-- joint for front wheel -->
    <joint name="caster_left_wheel_joint" type="fixed">
        <parent link="base_link"/>
        <child link="caster_wheel_link" />
        <origin xyz="0.2 0 0" rpy="0 0 0" />
        <axis xyz="0 1 0" />
    </joint>

</robot>
